{
  "rules": {
    "courses": {
      ".read": true,
      "$courseId": {
        ".write": "auth != null && root.child('users/' + auth.uid + '/isAdmin').val() === true", // Only admins can write
        "history": {
          ".read": true,
          ".write": "auth != null && root.child('courses/' + $courseId + '/users/' + auth.uid + '/isTA').val() === true"
        },
        "users": {
          "$userId": {
            ".read": "auth != null && (auth.uid === $userId || root.child('users/' + auth.uid + '/isAdmin').val() === true)",
            ".write": "auth != null && (auth.uid === $userId || root.child('users/' + auth.uid + '/isAdmin').val() === true)",
            "isTA": {
              ".write": "auth != null && root.child('users/' + auth.uid + '/isAdmin').val() === true"
            }
          }
        }
      }
    },
    "queues": {
      "$courseId": {
        ".read": true,
        ".write": "auth != null"
      }
    },
    "users": {
      "$userId": {
        ".read": "auth != null && (auth.uid === $userId || root.child('users/' + auth.uid + '/isAdmin').val() === true)", // User themselves or admin can read
        ".write": "auth != null && (auth.uid === $userId || root.child('users/' + auth.uid + '/isAdmin').val() === true)", // User themselves or admin can write
        "isAdmin": {
          ".read": "auth != null && root.child('users/' + auth.uid + '/isAdmin').val() === true", 
          ".write": "auth != null && root.child('users/' + auth.uid + '/isAdmin').val() === true"
        }
      },
      ".read": "auth != null && root.child('users/' + auth.uid + '/isAdmin').val() === true", // Admins can read all user data
      ".write": "auth != null && root.child('users/' + auth.uid + '/isAdmin').val() === true" // Admins can write all user data
    }
  }
}
